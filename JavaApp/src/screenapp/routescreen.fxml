<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="routeContainer" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screenapp.RouteController">
   <center>
       <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
           <Label id="arrowIcon" />
           <Label alignment="CENTER" contentDisplay="CENTER" text="Look to the right and look for the color" textFill="WHITE">
              <font>
                  <Font name="Calibri Bold" size="36.0" />
              </font>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
           </Label>
           <Label id="colorLbl" fx:id="colorLbl">
              <font>
                  <Font name="Calibri Bold" size="36.0" />
              </font>
           </Label>
           <Label id="toFindLbl" fx:id="toFindLbl" contentDisplay="CENTER" text="to find the book “Operating Systems”" textFill="WHITE">
              <font>
                  <Font name="Calibri Bold" size="36.0" />
              </font>
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
           </Label>
           <Button id="cancelSearchBtn" fx:id="cancelSearchBtn" mnemonicParsing="false" stylesheets="@../StyleSheet.css" onAction="#cancelSearch" text="Cancel current search">
              <opaqueInsets>
                  <Insets />
              </opaqueInsets>
              <VBox.margin>
                  <Insets top="50.0" />
              </VBox.margin>
           </Button>
       </VBox>
   </center>
</BorderPane>
